# Tumblr Upload Agent System Configuration

# =============================================================================
# TUMBLR API CREDENTIALS (Required)
# =============================================================================
# Get these from https://www.tumblr.com/oauth/apps
CONSUMER_KEY=your_consumer_key_here
CONSUMER_SECRET=your_consumer_secret_here
OAUTH_TOKEN=your_oauth_token_here
OAUTH_SECRET=your_oauth_secret_here

# Tumblr blog
BLOG_NAME=your_blog_name.tumblr.com

# Post state: published, draft, queue, private
POST_STATE=published


# =============================================================================
# FILE WATCHING CONFIGURATION
# =============================================================================
# Base directory to watch for uploads
BASE_UPLOAD_FOLDER=./data/upload

# Auto-discover categories from subdirectories (recommended)
AUTO_DISCOVER_CATEGORIES=true

# Categories to watch (comma-separated) - only used if auto-discovery is disabled
# or as fallback if no directories are found
CATEGORIES=Photography,Art,Nature,Technology

# File extensions to process (comma-separated)
FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif

# Polling interval in seconds
POLLING_INTERVAL=1.0


# =============================================================================
# IMAGE ANALYSIS
# =============================================================================
# Enable AI-powered image analysis and description generation
ENABLE_IMAGE_ANALYSIS=false

# Gemini API key for image analysis (get from Google AI Studio)
GEMINI_API_KEY=your_gemini_key_here

# Gemini model to use for analysis
GEMINI_MODEL=gemini-1.5-flash

# Custom prompt for AI image analysis
GEMINI_PROMPT="Describe this image in 1-2 concise sentences. Focus on the visual elements and describe what is in the image, not any text it contains. Keep it brief and clear. Do not state Here is a description of the image."

# Text to append after AI-generated description
DESCRIPTION_APPEND_TEXT=


# =============================================================================
# FILE MANAGEMENT
# =============================================================================
# Directory for failed uploads
FAILED_UPLOAD_BASE=./data/failed

# Clean up old files after N days (0 = disabled)
CLEANUP_AFTER_DAYS=30


# =============================================================================
# RATE LIMITING
# =============================================================================
# Delay between uploads (seconds)
UPLOAD_DELAY=5.0

# Maximum uploads per hour
MAX_UPLOADS_PER_HOUR=100

# Maximum uploads per day
MAX_UPLOADS_PER_DAY=1000

# Burst limit (uploads per minute)
BURST_LIMIT=5


# =============================================================================
# ORCHESTRATOR SETTINGS
# =============================================================================
# Maximum concurrent uploads - controls how many files can be processed simultaneously
# When multiple files are copied to upload directories, they will be processed in parallel
# up to this limit. Higher values = faster processing but more resource usage.
MAX_CONCURRENT_UPLOADS=3

# Retry attempts for failed operations
RETRY_ATTEMPTS=3

# Retry delay (seconds)
RETRY_DELAY=10.0

# Agent ID (for multi-instance deployments)
AGENT_ID=orchestrator 