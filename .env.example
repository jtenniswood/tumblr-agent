# Tumblr Configuration
CONSUMER_KEY=your_consumer_key_here
CONSUMER_SECRET=your_consumer_secret_here
OAUTH_TOKEN=your_oauth_token_here
OAUTH_SECRET=your_oauth_secret_here
BLOG_NAME=your_blog_name_here
POST_STATE=published

# Image Analysis (Gemini AI)
ENABLE_IMAGE_ANALYSIS=true
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
DESCRIPTION_APPEND_TEXT=

# PushOver Notifications (for error alerts)
ENABLE_NOTIFICATIONS=true
PUSHOVER_USER_KEY=your_pushover_user_key_here
PUSHOVER_API_TOKEN=your_pushover_api_token_here

# File Management
BASE_UPLOAD_FOLDER=./data/upload
CATEGORIES=
AUTO_DISCOVER_CATEGORIES=true
FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.avif,.webp,.bmp,.tiff,.tif

# Image Conversion
ENABLE_IMAGE_CONVERSION=true
CONVERSION_QUALITY=95
KEEP_ORIGINAL_AFTER_CONVERSION=false
CONVERT_FORMATS=.avif,.bmp,.tiff,.tif

# Rate Limiting
UPLOAD_DELAY=5.0
MAX_UPLOADS_PER_HOUR=100
MAX_UPLOADS_PER_DAY=1000

# Monitoring
LOG_LEVEL=INFO
ENABLE_TRACING=true
HUMAN_READABLE_LOGS=true
DASHBOARD_PORT=8080

# System
MAX_CONCURRENT_UPLOADS=3
RETRY_ATTEMPTS=3
RETRY_DELAY=10.0